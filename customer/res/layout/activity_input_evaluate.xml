<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextAppearance="@style/Toolbar.TitleText" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="2"
            android:background="@color/color_b3b3b3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的评价让我们做到更好" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="2"
            android:background="@color/color_b3b3b3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:src="@drawable/evaluate_talk" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:src="@drawable/evaluate_phone" />

        <ImageView
            android:id="@+id/iv_complaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/evaluate_complaint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:textSize="@dimen/text_size_17" />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:paddingRight="10dp"
            android:src="@drawable/star1" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:src="@drawable/star1" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:src="@drawable/star1" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:src="@drawable/star1" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:src="@drawable/star1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择标签:"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/evaluate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:background="@drawable/evaluate_line2"
                    android:drawablePadding="6dp"
                    android:drawableRight="@drawable/evaluate_like"
                    android:gravity="center"
                    android:text="服务态度好" />

                <TextView
                    android:id="@+id/evaluate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/evaluate1"
                    android:background="@drawable/evaluate_line2"
                    android:drawablePadding="6dp"
                    android:drawableRight="@drawable/evaluate_like"
                    android:gravity="center"
                    android:text="接单速度快" />

                <TextView
                    android:id="@+id/evaluate3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/evaluate1"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/evaluate_line2"
                    android:drawablePadding="6dp"
                    android:drawableRight="@drawable/evaluate_like"
                    android:gravity="center"
                    android:text="有耐心" />

                <TextView
                    android:id="@+id/evaluate4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/evaluate1"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/evaluate3"
                    android:background="@drawable/evaluate_line2"
                    android:drawablePadding="6dp"
                    android:drawableRight="@drawable/evaluate_like"
                    android:gravity="center"
                    android:text="工作认真" />

                <TextView
                    android:id="@+id/evaluate5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/evaluate3"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/evaluate_line2"
                    android:drawablePadding="6dp"
                    android:drawableRight="@drawable/evaluate_like"
                    android:gravity="center"
                    android:text="专业技术强" />

                <TextView
                    android:id="@+id/evaluate6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/evaluate3"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/evaluate5"
                    android:background="@drawable/evaluate_line2"
                    android:drawablePadding="6dp"
                    android:drawableRight="@drawable/evaluate_like"
                    android:gravity="center"
                    android:text="着装整洁" />
            </RelativeLayout>


            <EditText
                android:id="@+id/et_confirm_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shapee"
                android:enabled="true"
                android:gravity="top"
                android:hint="如有其它意见,请输入填写"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minLines="8"
                android:scrollbars="vertical"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:src="@drawable/button10" />
    </LinearLayout>
</LinearLayout>
