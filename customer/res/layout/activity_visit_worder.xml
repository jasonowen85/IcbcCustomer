<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_first_my_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextAppearance="@style/Toolbar.TitleText" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="8dp"
                            android:text="@string/repairs_form"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/visit_repairs_form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/baoxiuleixing"
                            android:paddingLeft="20dp"
                            android:text="上门现场维修"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:paddingLeft="8dp"
                            android:text="@string/mailing_address"
                            android:textSize="@dimen/text_size_15" />

                        <EditText
                            android:id="@+id/visit_mailing_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/iforminput_bg"
                            android:entries="@array/branch"
                            android:paddingLeft="20dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:text="@string/repairs_contacts"
                            android:textSize="@dimen/text_size_15" />

                        <EditText
                            android:id="@+id/visit_repairs_contacts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/iforminput_bg"
                            android:paddingLeft="20dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15"

                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:paddingLeft="8dp"
                            android:text="@string/contact_number"
                            android:textSize="@dimen/text_size_15" />

                        <EditText
                            android:id="@+id/visit_contact_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/iforminput_bg"
                            android:paddingLeft="20dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="@color/grey2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="15dp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:paddingLeft="8dp"
                            android:text="@string/equipment"
                            android:textSize="@dimen/text_size_15" />

                        <Spinner
                            android:id="@+id/visit_equipment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25dp"
                            android:dropDownVerticalOffset="40dp"
                            android:paddingLeft="25dp"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:paddingLeft="8dp"
                            android:text="@string/supplier"
                            android:textSize="@dimen/text_size_15" />

                        <Spinner
                            android:id="@+id/visit_supplier"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25dp"
                            android:dropDownVerticalOffset="40dp"
                            android:paddingLeft="25dp"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:paddingLeft="8dp"
                            android:text="@string/model"
                            android:textSize="@dimen/text_size_15" />

                        <Spinner
                            android:id="@+id/visit_model"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25dp"
                            android:dropDownVerticalOffset="40dp"
                            android:paddingLeft="25dp"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_contact_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:background="@color/gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="right"
                                android:paddingLeft="8dp"
                                android:text="@string/nummber"
                                android:textSize="@dimen/text_size_15" />

                            <EditText
                                android:id="@+id/et_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/iforminput_bg"
                                android:paddingLeft="20dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="right"
                                android:paddingLeft="8dp"
                                android:text="@string/note"
                                android:textSize="@dimen/text_size_15" />

                            <EditText
                                android:id="@+id/visit_note"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/iforminput_bg"
                                android:paddingLeft="20dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/visit_write"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:background="@drawable/iforminput_bg"
                                android:hint="描述一下机器故障情况"
                                android:padding="8dp"
                                android:textColorHint="@color/color_hint_d9d9d9"
                                android:textSize="@dimen/text_size_15" />

                            <ImageView
                                android:id="@+id/visit_mike"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:src="@drawable/voice" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/visit_layout_record"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignLeft="@+id/visit_write"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="14dp"
                            android:padding="3dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/visit_img_layout"
                                android:layout_width="95dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="7dp"
                                android:background="@drawable/selector_record_layout"
                                android:contentDescription="@null" />

                            <ImageView
                                android:id="@+id/tweet_img_volume"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="3dp"
                                android:background="@drawable/audio_animations"
                                android:contentDescription="@null" />

                            <TextView
                                android:id="@+id/visit_time_record"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/visit_img_layout"
                                android:textColor="#666666"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/delete_visit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="16dp"
                                android:layout_toRightOf="@+id/visit_time_record"
                                android:background="@drawable/record_delete1" />
                        </RelativeLayout>

                        <com.grgbanking.demo.main.helper.RecordButton
                            android:id="@+id/visit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:orientation="horizontal">

                            <com.grgbanking.demo.common.photo.view.NoScrollGridView
                                android:id="@+id/visit_noScrollgridview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:cacheColorHint="@android:color/transparent"
                                android:clipChildren="true"
                                android:gravity="center"
                                android:listSelector="@android:color/transparent"
                                android:numColumns="4"
                                android:stretchMode="columnWidth" />
                        </LinearLayout>

                        <!--<LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:background="@color/grey2">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/addo"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/text_large_primary_size"
                                android:layout_marginBottom="@dimen/text_large_primary_size"
                                android:id="@+id/visit_add" />
                        </LinearLayout>-->

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/text_size_10"
            android:src="@drawable/button18" />

    </LinearLayout>
</LinearLayout>