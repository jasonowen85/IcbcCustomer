<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_first_my_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextAppearance="@style/Toolbar.TitleText" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="@color/grey2"
        android:layout_weight="1">
        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/margin_20dp"
                            android:text="@string/repairs_form"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/et_repairs_form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/margin_20dp"
                            android:text="寄件返厂维修"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:paddingLeft="@dimen/margin_20dp"
                            android:text="@string/mailing_address"
                            android:textSize="@dimen/text_size_15" />

                        <EditText
                            android:id="@+id/et_mailing_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/iforminput_bg"
                            android:paddingLeft="20dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/margin_20dp"
                            android:text="@string/repairs_contacts"
                            android:textSize="@dimen/text_size_15" />
                        <EditText
                            android:id="@+id/et_repairs_contacts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/iforminput_bg"
                            android:paddingLeft="20dp"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/margin_20dp"
                            android:text="@string/contact_number"
                            android:textSize="@dimen/text_size_15" />
                        <EditText
                            android:id="@+id/et_contact_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/iforminput_bg"
                            android:paddingLeft="20dp"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="@color/grey2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/margin_20dp"
                            android:text="@string/express"
                            android:textSize="@dimen/text_size_15" />

                        <EditText
                            android:textColorHint="@color/color_hint_d9d9d9"
                            android:hint="@string/add_express_detail"
                            android:id="@+id/et_express"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/iforminput_bg"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/margin_20dp"
                            android:text="@string/courier_number"
                            android:textSize="@dimen/text_size_15" />

                        <EditText
                            android:textColorHint="@color/color_hint_d9d9d9"
                            android:hint="@string/add_express_detail"
                            android:id="@+id/et_courier_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/iforminput_bg"
                            android:paddingLeft="20dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="fill_parent"
                    android:layout_height="12dp"
                    android:background="@color/grey2"
                    android:textSize="@dimen/text_size_17" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="15dp"></LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp" >

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:paddingLeft="@dimen/margin_20dp"
                            android:text="@string/equipment"
                            android:textSize="@dimen/text_size_15" />

                        <Spinner
                            android:id="@+id/et_equipments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:layout_marginRight="25dp"
                            android:spinnerMode="dropdown"
                            android:dropDownVerticalOffset="40dp"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/gray"
                        android:id="@+id/textView2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:paddingLeft="@dimen/margin_20dp"
                            android:text="@string/supplier"
                            android:textSize="@dimen/text_size_15" />

                        <Spinner
                            android:id="@+id/supplier"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:layout_marginRight="25dp"
                            android:spinnerMode="dropdown"
                            android:dropDownVerticalOffset="40dp"
                            android:textSize="@dimen/text_size_15">

                        </Spinner>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:paddingLeft="@dimen/margin_20dp"
                            android:text="@string/model"
                            android:textSize="@dimen/text_size_15" />

                        <Spinner
                            android:id="@+id/et_model"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25dp"
                            android:paddingLeft="20dp"
                            android:spinnerMode="dropdown"
                            android:dropDownVerticalOffset="40dp"
                            android:textSize="@dimen/text_size_15"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"

                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:inputType="number"
                            android:paddingLeft="@dimen/margin_20dp"
                            android:text="@string/nummber"
                            android:textSize="@dimen/text_size_15" />

                        <EditText
                            android:id="@+id/et_nummber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/iforminput_bg"
                            android:inputType="number"
                            android:paddingLeft="20dp"
                            android:textSize="@dimen/text_size_15">
                        </EditText>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginRight="25dp"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:paddingLeft="@dimen/margin_20dp"
                                android:text="@string/note"
                                android:textSize="@dimen/text_size_15" />

                            <EditText
                                android:id="@+id/et_note"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/iforminput_bg"
                                android:paddingLeft="20dp"
                                android:textSize="@dimen/text_size_15">
                            </EditText>
                        </LinearLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/iv_write"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:background="@drawable/iforminput_bg"
                                android:hint="描述一下机器故障情况"
                                android:textColorHint="@color/color_hint_d9d9d9"
                                android:padding="@dimen/margin_10dp"
                                android:textSize="@dimen/text_size_15" />

                            <ImageView
                                android:id="@+id/mike"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:src="@drawable/voice" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/tweet_layout_record"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignLeft="@+id/iv_write"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="14dp"
                            android:padding="3dp"
                            android:visibility="gone" >

                            <ImageView
                                android:id="@+id/tweet_img_layout"
                                android:layout_width="95dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="7dp"
                                android:background="@drawable/selector_record_layout"
                                android:contentDescription="@null" />

                            <ImageView
                                android:id="@+id/tweet_img_volume"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="3dp"
                                android:background="@drawable/audio_animations"
                                android:contentDescription="@null" />

                            <TextView
                                android:id="@+id/tweet_time_record"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/tweet_img_layout"
                                android:textColor="#666666"
                                android:textSize="18sp" />
                            <ImageView
                                android:id="@+id/delete_record"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tweet_time_record"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="16dp"
                                android:background="@drawable/record_delete1"/>
                        </RelativeLayout>
                        <com.grgbanking.demo.main.helper.RecordButton
                            android:id="@+id/record_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:orientation="horizontal">
                            <com.grgbanking.demo.common.photo.view.NoScrollGridView
                                android:id="@+id/noScrollgridview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:cacheColorHint="@android:color/transparent"
                                android:clipChildren="true"
                                android:gravity="center"
                                android:listSelector="@android:color/transparent"
                                android:numColumns="4"
                                android:stretchMode="columnWidth" />
                        </LinearLayout>
                     <!--   <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:background="@color/grey2">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/addo"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/text_large_primary_size"
                                android:layout_marginBottom="@dimen/text_large_primary_size"
                                android:id="@+id/iv_add" />
                        </LinearLayout>-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/color_black_c8c7cc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/text_size_16"
            android:src="@drawable/button18" />

    </LinearLayout>
</LinearLayout>